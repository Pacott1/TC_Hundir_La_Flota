    "        except:\n",
    "            print(\"Formato incorrecto. Usa fila,col\")\n",
    "            continue\n",
    "\n",
    "        # Validar dentro del tablero\n",
    "        if not (0 <= fila < filas and 0 <= col < columnas):\n",
